<Page x:Class="ERPApp.Views.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Register">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            <!-- Full Name -->
            <StackPanel Margin="0,5">
                <TextBlock Text="Full Name" Foreground="Gray"/>
                <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" Height="30"/>
            </StackPanel>

            <!-- Email -->
            <StackPanel Margin="0,5">
                <TextBlock Text="Email" Foreground="Gray"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Height="30"/>
            </StackPanel>

            <!-- Password -->
            <StackPanel Margin="0,5">
                <TextBlock Text="Password" Foreground="Gray"/>
                <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged" Height="30"/>
            </StackPanel>

            <!-- Confirm Password -->
            <StackPanel Margin="0,5">
                <TextBlock Text="Confirm Password" Foreground="Gray"/>
                <PasswordBox x:Name="ConfirmPasswordBox" PasswordChanged="ConfirmPasswordBox_PasswordChanged" Height="30"/>
            </StackPanel>

            <!-- Register Button -->
            <Button Content="Register" Command="{Binding RegisterCommand}" Margin="0,10"/>

            <!-- Back to Login Button -->
            <Button Content="Back to Login" Click="BackToLogin_Click" Margin="0,5"/>

            <!-- Error Message -->
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,5,0,10" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Page>
